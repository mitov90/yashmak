@using MvcFileUploader.HtmlHelper
@using MvcFileUploader.Models
@using Yashmak.Common
@model int?

@{
    ViewBag.Title = "File Drag & Drop Upload";
}


@(Html.MvcFileUpload()
      .UploadAt(Url.Action("FileUpload"))
      .WithMaxFileSize(Constants.UploadFileMaxSize)
      .UIStyle(UploadUI.Bootstrap)
      .MaxNumberOfFiles(Constants.MaxСimultaneouslyUploads)
      .AddFormField("filenodeid", @Model.ToString())
      .RenderInline())

@Html.ActionLink("Go Back", "Index", "Files", new { filenodeid = Model }, new { @class = "btn btn-inverse pull-left" })



