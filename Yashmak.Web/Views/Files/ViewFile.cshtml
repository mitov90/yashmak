@model Yashmak.Web.ViewModels.File.FileViewModel


<div class="modal-body">
    <div class="alert alert-warning">
        <span class="glyphicon glyphicon-warning-sign"></span>
        View file @Model.FileName
    </div>
    @using (Html.BeginForm("Download", "Files", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            @Url.Action("Download", "Files", new { fileNodeId = Model.Id })
            &nbsp;
        </div>
        <input type="hidden" name="filenodeid" value="@Model.Id" />
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" id="approve-btn"
                        class="btn btn-inverse">
                    Download
                </button>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>